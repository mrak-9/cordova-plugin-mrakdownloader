<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-mrakdownloader" version="0.0.1">
    <name>MrakDownload</name>
    <description>Cordova MrakDownloader Plugin with no cordova-file-transfer dependency</description>
    <author>Mrak-9</author>
    <license>Apache 2.0</license>
    <keywords>cordova,download,downloader,file,unzip</keywords>

    <repo>https://github.com/mrak-9/cordova-plugin-mrakdownloader</repo>
    <issue>https://github.com/benjaminmwilson/cordova-plugin-mrakdownloader/issues</issue>

    <engines>
        <engine name="cordova" version=">=5.0.0" />
        <engine name="cordova-android" version=">=6.0.0" />
        <engine name="cordova-ios" version=">=4.0.0" />
    </engines>

    <dependency id="cordova-plugin-file" version=">=4.0.0" />
    <dependency id="cordova-plugin-zip" version=">=3.0.0" />

    <js-module src="www/download.js" name="MrakDownload">
        <clobbers target="MrakDownload" />
    </js-module>
</plugin>
